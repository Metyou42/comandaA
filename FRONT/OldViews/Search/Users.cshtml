@using Web.Domain.DTOs.UserAccount
@{
    ViewBag.Title = "Пошук";
    ICollection<UserViewDto> users = Model;
}

<table>
    @foreach (var user in users)
    {
        <div>
            @if (user.Avatar != null)
            {
                <img style='width:80px; height:60px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(user.Avatar))"/>
            }
            <a asp-controller="Users" asp-action="OpenUser" method="post" asp-route-userId="@user.Id">@user.NickName</a>
            <h3>@user.FirstName @user.LastName</h3>
        </div>
    }
</table>