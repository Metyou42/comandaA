        <button class="but">Повернутися до сьогодні</button>
    </div>
    <button id="current-week"></button>
</div>
<table class="info">
    <tbody>
    </tbody>
</table>

<script type="text/javascript">
    let subjectNotes = @Html.Raw(JsonConvert.SerializeObject(subjectNotes));
</script>

<script type="text/javascript" src="js/SubjectNotes/Main.js" asp-append-version="true"></script> 

