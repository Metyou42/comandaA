@if (User.Identity.IsAuthenticated && Model != null)
{
    @if (Model.Avatar != null)
    {
        <img style='width:80px; height:60px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Avatar))"/>
        <div/>
    }
    <div>
        <a asp-controller="Users" asp-action="Main" method="post" asp-route-id="@Model.Id">@Model.FirstName @Model.LastName</a>
        @* <h3> *@
        @*     Відстежується <a method="post" asp-controller="User" asp-action="Follows">@Model.Follows.Count</a> *@
        @*     Читачі <a method="post" asp-controller="User" asp-action="Subscribers">@Model.Subscribers.Count</a> *@
        @* </h3> *@
        <div>@Model.Rating</div>
    </div>
}